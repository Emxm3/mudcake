@using MudBlazor
@using MudCake.Data.Infrastructure
@using MudCake.core.Pages.Nav

@if(Source != null)
{
    <MudNavGroup Title="@Source!.Id">
        <!-- Content Pages at top of container -->
        @if (Source.Content != null)
        {
            @foreach (var c in Source.Content)
            {
                <MudNavLink Href="@c!.Href" Match="@c.Match" Icon="@c.Icon"> @c.Text</MudNavLink>
            }

        }
        <!-- Containers down bottom -->
        @if(Source.Children != null)
        {
            foreach(var c in Source.Children)
            {
                <MudNavSection Source="c" />
            }
        }
    </MudNavGroup>
}

@code {

    [Parameter]
    public IContainer<INavigationData?, string>? Source { get; set; }


}
